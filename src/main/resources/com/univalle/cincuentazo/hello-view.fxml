<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.univalle.cincuentazo.HelloController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Cincuentazo - Juego" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>

            <Label text="Jugador" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label text="Máquina" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <ListView fx:id="lstJugador" prefHeight="150" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <ListView fx:id="lstMaquina" prefHeight="150" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label fx:id="lblJugadorSuma" text="Jugador: 0" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <Label fx:id="lblMaquinaSuma" text="Máquina: 0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label fx:id="lblMazo" text="Cartas: 40" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

            <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2">
                <Button fx:id="btnRepartir" text="Repartir" onAction="#onRepartir"/>
                <Button fx:id="btnPlantar" text="Plantar" onAction="#onPlantar"/>
                <Button text="Reset" onAction="#onReset"/>
                <Button text="Salir" onAction="#onSalir"/>

                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </HBox>

        </GridPane>
    </center>

    <bottom>
        <VBox>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Registro:"/>
            <TextArea fx:id="txtLog" prefHeight="120" wrapText="true" editable="false"/>
        </VBox>
    </bottom>

</BorderPane>
